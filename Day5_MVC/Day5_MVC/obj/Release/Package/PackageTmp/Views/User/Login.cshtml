@model Day5_MVC.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Email</label>
        @*<input type="email" name="Email" class="form-control" placeholder="Enter your email address" />
        @Html.TextBox("Email", null, new { @class="form-control", placeholder="Enter your email address" })*@
        @Html.TextBoxFor(x => x.Email, null, new { @class="form-control", placeholder="Enter your email address" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.Password("Password", null, new { @class="form-control", placeholder="Enter your password" })
    </div>
    <div class="form-group">
        <button class="btn btn-success">
            <i class="glyphicon glyphicon-user"></i>
            Login
        </button>
    </div>
    if(ViewBag.errmsg!=null)
    {
        @ViewBag.errmsg
    }
}