@model IEnumerable<Day5_MVC.Models.User>

@{
    ViewBag.Title = "GetStudentMajors";
}

<h2>GetStudentMajors</h2>

@using (Html.BeginForm())
{
    @Html.DropDownList("MjrID", null, "-select major-", new { onchange = "this.form.submit()", @class = "form-control" })
    @*<input type="submit" value="Click" class="btn btn-success" />*@
}

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Full Name</th>
        <th>Image</th>
        <th>Major</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Email</td>
            <td>@item.Account.FullName</td>
            <td>
                <img src="~/Images/@item.Account.Image" width="200" height="200" class="img-thumbnail" />
            </td>
            <td>@item.Major.Title</td>
        </tr>
    }
</table>