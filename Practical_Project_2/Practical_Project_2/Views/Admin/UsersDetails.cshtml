
@{
    ViewBag.Title = "Users Details";
}

<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/js/jquery.dataTables.min.js"></script>
<script>
    $(function () {
        var table2;
        $.ajax({
            url: "/api/GetUserDetails",
            type: "GET",
            contentType: "application/json; charset=utf-8",
            dataType: "JSON",
            success: function (obj) {
                $('#table2').css("display", "none");
                $('#table1').css("display", "block");
                var table1 = $('#UsersTable').DataTable({
                    "data": obj,
                    "columns": [
                        { "data": "FirstName" },
                        { "data": "LastName" },
                        { "data": "Email" },
                        { "data": "Role" },
                        { "defaultContent": "<button>View</button>" }
                    ]
                });

                $('#UsersTable tbody').on('click', 'button', function () {
                    var data = table1.row($(this).parents('tr')).data();
                    $('#table1').css("display", "none");
                    $('#table2').css("display", "block");
                    $.ajax({
                        url: "/api/GetUserPurchases/" + data.ID,
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        dataType: "JSON",
                        success: function (obj) {
                            table2 = $('#UserPurchasesTable').DataTable({
                                paging: false,
                                searching: false,
                                "data": obj,
                                "columns": [
                                    { "data": "NumOfItems" },
                                    { "data": "TotalPrice" },
                                    { "data": "Date" }
                                ]
                            });
                        }
                    });
                });

            }
        });

        $("#btn").click(function () {
            table2.destroy();
            $('#table2').css("display", "none");
            $('#table1').css("display", "block");
        });
    });
</script>
<div class="products">
    <div class="container">
        <div class="row" id="table1">
            <div class="col-md-12">
                <table id="UsersTable" class="display" style="max-width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row" id="table2">
            <div class="col-md-12">
                <button type="button" class="btn btn-link" id="btn">Back to Users Table</button>
                <table id="UserPurchasesTable" class="display" style="max-width:100%">
                    <thead>
                        <tr>
                            <th>Numer of Items</th>
                            <th>Total Price</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Numer of Items</th>
                            <th>Total Price</th>
                            <th>Date</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>