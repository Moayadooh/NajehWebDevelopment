
@{
    ViewBag.Title = "Payment Success";
}

<script>
    $(function () {
        var jsonObj = [];
        jsonObj.push({
            "TotalCart": $(".total-cart").text(),
            "TotalCount": $(".total-count").text()
        });
        $.ajax({
            type: "POST",
            url: "/User/Purchase",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(jsonObj),
            success: function (data) {
                shoppingCart.clearCart();
                displayCart();
                $('#msg').text(data);
                //window.location = '@Url.Action("Index", "User")';
            },
            error: function (data) {
                alert('Could not save the records!');
                console.log(data);
            }
        });
    });
</script>

<div class="alert alert-success" role="alert"><h2 id="msg"></h2></div>