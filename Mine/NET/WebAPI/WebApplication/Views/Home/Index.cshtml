@{
    ViewBag.Title = "Major";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-4 form-group">

        </div>
        <div class="col-md-4 form-group">
            <h1>MAJORS</h1>
        </div>
        <div class="col-md-4 form-group">

        </div>
    </div>
    <div class="row">
        <div class="col-md-2 form-group">
            <input type="hidden" id="ID" value="" />
            <input type="text" class="form-control" id="txtTitle" placeholder="Title" />
        </div>
        <div class="col-md-2 form-group">
            <input type="text" class="form-control" id="txtTotalHours" placeholder="Total Hours" />
        </div>
        <div class="col-md-2 form-group">
            <input type="text" class="form-control" id="txtPrice" placeholder="Price" />
        </div>
        <div class="col-md-3 form-group">
            <input type="datetime-local" class="form-control" id="txtStartDate" />
        </div>
        <div class="col-md-3 form-group">
            <input type="datetime-local" class="form-control" id="txtEndDate" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button class="form-control btn btn-success" id="btnAdd" type="button">
                    <i class="fas fa-plus"></i> Add New Course
                </button>
            </div>
            <div class="form-group">
                <button class="form-control btn btn-primary" id="btnSave" type="button">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
            <div class="form-group">
                <button class="form-control btn btn-danger" id="btnCancel" type="button">
                    <i class="fas fa-ban"></i> Cancel
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="table">

            </div>
        </div>
    </div>
</div>