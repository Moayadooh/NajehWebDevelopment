@model IEnumerable<Day3_MVC.Models.Employee>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<form>
    <input type="text" name="fname" class="form-control" />
    <input type="submit" class="form-control" />
</form>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>DOB</th>
        <th>Salary</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.DOB</td>
            <td>@item.Salary</td>
        </tr>
    }
</table>