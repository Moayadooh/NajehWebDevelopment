
@{
    ViewBag.Title = "SignIn";
}

<h2>SignIn</h2>

<script>
    $(function () {
        $("input[value=SignIn]").click(function () {

            $.ajax({
                // url: "/api/GetLogin/" + $("#txtName").val() + "/" + $("#txtPass").val(),
                url: "/api/GetLogin2/" + $("#txtName").val() + "/" + $("#txtPass").val(),
                type: "get",
                contentType: "application/json ; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert("Welcome, " + data.Email);
                    window.location = "index?name=" + data.Email + "&ID=" + data.ID;
                }
            });
        });
    });
</script>

<form class="jumbotron">
    <div class="form-group">
        <input type="text" id="txtName" class="form-control" placeholder="Enter UserName" />
    </div>
    <div class="form-group">
        <input type="text" id="txtPass" class="form-control" placeholder="Enter Password" />
    </div>
    <div class="form-group">
        <input type="button" class="btn btn-primary" value="SignIn" />
    </div>
</form>