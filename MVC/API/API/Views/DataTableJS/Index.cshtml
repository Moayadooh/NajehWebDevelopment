
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script>
    $(function () {

        $.ajax({
            url: "/api/ads",
            type: "get",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (obj) {
                $('#example').DataTable({
                    "data": obj,
                    "columns": [
                        { "data": "ID" },
                        { "data": "Title" },
                        { "data": "Details" },
                        { "data": "Rate" }
                    ]
                });
            }
        });

    });
</script>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Details</th>
            <th>Rate</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Details</th>
            <th>Rate</th>
        </tr>
    </tfoot>
</table>