                for (var i = 0; i < oldMonth.length; i++) {
                    if (!isNaN(oldMonth[i]))
                        newMonth += oldMonth[i];

                    if (isNaN(oldMonth))
                        //newMonth = "mm";

                    if (i == 1)
                        break;
                }

