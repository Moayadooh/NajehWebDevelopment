                //            if (newDate == "") {
                //                if (len > 1)
                //                    newDate = "0000";
                //                else
                //                    newDate = "00";
                //            }
                //            else
                //                newDate = 0 + newDate;
                //        }

                //        if (i == len)
                //            break;

                //    }
                //}

                //for (var i = 0; i < oldDay.length; i++) {

                //    if (!isNaN(oldDay[i]))
                //        newDay += oldDay[i];

                //    if (oldDay.length == 1 && isNaN(oldDay)) {
                //        if (newDay == "")
                //            newDay = "00";
                //        else
                //            newDay = 0 + newDay;
                //    }

                //    if (i == 1)
                //        break;

                //}

                $(this).val(newDay + "/" + newMonth + "/" + newYear);
            });
        });
    </script>
</body>
</html>