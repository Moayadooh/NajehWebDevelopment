@model IEnumerable<Day5_MVC.Models.User>

@{
    ViewBag.Title = "AddRole";
}

<h2>AddRole</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DropDownList("RoleID", null, "-select role-", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownList("UserID", null, "-select user-", new { @class = "form-control" })
    </div>
    <table class="table table-hover">
        <tr>
            <th>Email</th>
            <th>Role Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                @if (item.Role != null)
                {
                    <td>@item.Role.RoleName</td>
                }
                else
                {
                    <td>NULL</td>
                }
            </tr>
        }
    </table>
    <input type="submit" value="Add Role" class="btn btn-success" />
}