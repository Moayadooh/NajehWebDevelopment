
@{
    ViewBag.Title = "GetChart";
}

<h2>GetChart</h2>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<script src="~/Scripts/utils.js"></script>
<script>
    var titlesdata = [];
    var ratedata = [];
    $(function () {
        $.ajax({
            url: "/api/GetRate/",
            type: "get",
            contentType: "application/json ; charset=utf-8",
            dataType: "json",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    titlesdata[i] = data[i].Title;
                    ratedata[i] = data[i].Rate;
                }
                var ctx = document.getElementById('myChart').getContext('2d');
                var myChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: titlesdata,
                        datasets: [{
                            label: '# of Votes',
                            data: ratedata,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            }
        });
    });

</script>
<canvas id="myChart" width="400" height="400"></canvas>