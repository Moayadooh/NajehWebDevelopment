@using ReportViewerForMvc
@{
    ViewBag.Title = "Index";
}

<h2>Report</h2>

<div class=" container jumbotron">
    @using (Html.BeginForm())
    {
        <label>Min Price</label>
        @Html.TextBox("minprice", null, new { @class = "form-control" })

        <label>Max Price</label>
        @Html.TextBox("maxprice", null, new { @class = "form-control" })

        @*<label> Location</label>
        @Html.DropDownList("Location23", (SelectList)ViewBag.Location, "-select country-", new { @class = "form-control", onchange = "this.form.submit()" })*@

        <div class="form-group">
            <input type="submit" value="submit" class="btn btn-primary" />
        </div>
        <div class="form-group">
            @if (ViewBag.reportviewer != null)
            {
                @Html.ReportViewer(ViewBag.reportviewer as Microsoft.Reporting.WebForms.ReportViewer)
            }
        </div>
    }
</div>